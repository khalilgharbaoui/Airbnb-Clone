<%= content_for :body_class do "new" end %>
<h1>Add your car here and become a car host</h1>

<div class="add_car">
  <div class="middle">
  <%= form_for(@car) do |f| %>
  <div>
    <p><%= f.label :model %></p>
    <%= f.text_field :model %>
  </div>
  <div class="">
    <%= f.label :description %>
    <p><%= f.text_area :description %></p>
  </div>
  <div class="">
    <p><%= f.text_field :image %></p>
  </div>
  <div class="">
    <p><%= f.submit "Submit Car" %>
      <span class="btn btn-default"><%= link_to "Back", root_path %></span>
    </p>
  </div>
</div>
</div>
<% end %>
