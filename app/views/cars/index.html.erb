<div class="row">
<% @cars.each do |car| %>
<div class="col col s12 m6 l4">
  <article class="card-panel hoverable">
    <p><%= car.image %></p>
      <h1><%= link_to car.model, car %></h1>
    <p><%= car.description %></p>

  </article>
</div>
<% end %>
</div>
<br />
<span class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons"><%= link_to "+", new_car_path %></i></span>
