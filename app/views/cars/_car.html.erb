<div class="col col s12 m6 l3">
  <article class="card-panel hoverable">
    <p><%= image_tag car.image, :style => "width:100%;" %></p>
    <h1 style="font-size:25px;"><%= link_to car.model, car %></h1>
    <em><p><u>Car Info & Availability:</u></p></em>
    <p>From: <%= car.begin_date %></p>
    <p>Untill: <%= car.end_date %></p>
    <p>Price: <%= car.price %></p>
    <p>Pickup Location: <%= car.location %></p>

  </article>
</div>
